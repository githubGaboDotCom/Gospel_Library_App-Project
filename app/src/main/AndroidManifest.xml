<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs246company.gospellibrarylite">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScriptureActivity"
            android:label="@string/title_activity_scripture"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs246company.gospellibrarylite.MainActivity" />
        </activity>
        <activity android:name=".NotesActivity" />
        <activity android:name=".InformationActivity" />
        <activity android:name=".readMormon" />
        <activity android:name=".readOldTestament" />
        <activity android:name=".readNewTestament" />
        <activity android:name=".readDoctrine" />
        <activity android:name=".readPearl" />
        <activity
            android:name=".addNotes"
            android:label="@string/title_activity_add_notes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".addNote" />
        <activity android:name=".selectMormon"></activity>
    </application>

</manifest>