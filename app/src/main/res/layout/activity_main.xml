<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs246company.gospellibrarylite.MainActivity">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/pic"
    android:id="@+id/jesus"
    android:layout_marginTop="-120px"

    />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jesus"
        android:text="''Learn of me,and listen to my words; walk in the meekness of my Spirit,and you shall have peace in me.''"
        android:textSize="18dp"
        android:textColor="@color/baseColor"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@+id/btnScripture"
        android:layout_width="400px"
        android:layout_height="400px"
        android:text="Scriptures"
        android:textSize="25dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="75px"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gospel"
        />
    <ImageButton
        android:id="@+id/btnNotes"
        android:layout_width="400px"
        android:layout_height="400px"
        android:text="Notes"
        android:layout_marginTop="20px"
        android:textSize="25dp"
        android:layout_below="@+id/btnScripture"
        android:layout_centerHorizontal="true"
        android:src="@drawable/notes"

        />
    <ImageButton
        android:id="@+id/btnAboutUs"
        android:layout_width="400px"
        android:layout_height="400px"
        android:text="About us "
        android:layout_marginTop="20px"
        android:textSize="25dp"
        android:src="@drawable/about"
        android:layout_below="@+id/btnNotes"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
</ScrollView>