<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs246company.gospellibrarylite.ScriptureActivity">

    <ImageButton
        android:id="@+id/btnMormon"
        android:layout_width="255px"
        android:layout_height="350px"
        app:srcCompat="@drawable/mormon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6px"
         />

    <ImageButton
        android:id="@+id/btnDoctrine"
        android:layout_width="255px"
        android:layout_height="350px"
        app:srcCompat="@drawable/doctrine"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6px"
        android:layout_marginLeft="-10px"
        android:layout_toEndOf="@+id/btnMormon" />

    <ImageButton
        android:id="@+id/btnPearl"
        android:layout_width="255px"
        android:layout_height="350px"
        app:srcCompat="@drawable/pearl"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6px"
        android:layout_toEndOf="@+id/btnDoctrine"
        android:paddingLeft="-10px"/>

    <ImageButton
        android:id="@+id/btnOld"
        android:layout_width="255px"
        android:layout_height="350px"
        app:srcCompat="@drawable/old"
        android:layout_marginTop="355px"
         />

    <ImageButton
        android:id="@+id/btnNTestament"
        android:layout_width="255px"
        android:layout_height="350px"
        app:srcCompat="@drawable/tnew"
       android:layout_toEndOf="@+id/btnOld"
        android:layout_marginTop="355px"
        />

</RelativeLayout>
